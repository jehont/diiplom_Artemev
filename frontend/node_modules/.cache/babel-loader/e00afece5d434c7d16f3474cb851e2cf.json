{"ast":null,"code":"import axios from \"axios\";\nimport { mapState } from \"vuex\";\nexport default {\n  props: ['bill'],\n  name: \"OrderDetails\",\n\n  data() {\n    return {\n      allFoodsInBill: [],\n      item_qty: [],\n      billMatch: undefined\n    };\n  },\n\n  created() {\n    this.getAllFoods();\n    this.getBillStatus();\n  },\n\n  computed: { ...mapState([\"allFoods\"]),\n    filterFoods: function () {\n      return this.allFoods.filter(f => this.matchID(f, this.allFoodsInBill));\n    }\n  },\n  methods: {\n    matchID: function (food, cartArray) {\n      let temp = \"\";\n      cartArray.forEach(element => {\n        if (parseInt(food.food_id) == element) {\n          temp = food;\n        }\n      });\n      return temp;\n    },\n\n    async getAllFoods() {\n      if (this.bill) {\n        let data = (await axios.get('/billdetails/' + this.bill)).data;\n        data.forEach(element => {\n          this.allFoodsInBill.push(element.food_id);\n          this.item_qty.push(element.item_qty);\n        });\n      }\n    },\n\n    async getBillStatus() {\n      if (this.bill) {\n        this.billMatch = (await axios.get('/billstatus/bill/' + this.bill)).data[0];\n      }\n    }\n\n  }\n};","map":{"version":3,"mappings":"AA8BA,OAAOA,KAAP,MAAkB,OAAlB;AACA,SAASC,QAAT,QAAyB,MAAzB;AACA,eAAe;EACXC,KAAK,EAAE,CAAC,MAAD,CADI;EAEXC,IAAI,EAAE,cAFK;;EAIXC,IAAI,GAAG;IACH,OAAO;MACHC,cAAc,EAAE,EADb;MAEHC,QAAQ,EAAE,EAFP;MAIHC,SAAS,EAAEC;IAJR,CAAP;EAMH,CAXU;;EAaXC,OAAO,GAAG;IACN,KAAKC,WAAL;IACA,KAAKC,aAAL;EACH,CAhBU;;EAkBXC,QAAQ,EAAE,EACN,GAAGX,QAAQ,CAAC,CAAC,UAAD,CAAD,CADL;IAGNY,WAAW,EAAE,YAAY;MACrB,OAAO,KAAKC,QAAL,CAAcC,MAAd,CACFC,CAAD,IAAO,KAAKC,OAAL,CAAaD,CAAb,EAAgB,KAAKX,cAArB,CADJ,CAAP;IAGH;EAPK,CAlBC;EA4BXa,OAAO,EAAE;IACLD,OAAO,EAAE,UAAUE,IAAV,EAAgBC,SAAhB,EAA2B;MAChC,IAAIC,IAAG,GAAI,EAAX;MACAD,SAAS,CAACE,OAAV,CAAkBC,OAAM,IAAK;QACzB,IAAIC,QAAQ,CAACL,IAAI,CAACM,OAAN,CAAR,IAA0BF,OAA9B,EAAuC;UACnCF,IAAG,GAAIF,IAAP;QACJ;MACH,CAJD;MAKA,OAAOE,IAAP;IACH,CATI;;IAWL,MAAMX,WA